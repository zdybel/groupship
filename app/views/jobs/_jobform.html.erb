<% if current_user %>

	<%= form_for @job do |f| %>

		<%= f.label :origin, value: "Origin:" %>
		<%= f.select(:origin, options_for_select(locations)) %><br />

		<%= f.label :destination, value: "Destination:" %>
		<%= f.select(:destination, options_for_select(locations)) %><br />

		<%= f.text_area :description, :cols => "80", :rows => "10", placeholder: "Description" %><br />


		<%= f.label :container_amount %>:
		<%= f.text_field :container_amount %><br />

		<%= f.label :cost %>:
		<%= f.text_field :cost %><br />


		<%= f.hidden_field :user_id, value: current_user.id %><br />

		<%= f.submit %>

	<% end %>
<% end %>